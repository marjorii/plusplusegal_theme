{% extends 'partials/base.html.twig' %}

{% block page %}
<div class="container">
    <section class="left">
        {% set nav = pages.find('/nav') %}
        <h1>Plus Plus Égal</h1>
        <ul>
            {% for member in nav.header.member %}
            {% for info in member.founders %}
            <li><a href="{{ info.url }}" target="_blank">{{ info.name }}</a></li>
            {% endfor %}
            {% endfor %}
        </ul>
        <ul>
            {% for member in nav.header.member %}
            {% for info in member.guests %}
            <li>{% if info.url %}<a href="{{ info.url }}" target="_blank">{{ info.name }}</a>{% else %}<a>{{ info.name }}</a>{% endif %}</li>
            {% endfor %}
            {% endfor %}
        </ul>
        <span class="main">{{ nav.content }}</span>
        <span class="alternate"><p>{{ nav.header.alternate }}</p></span>
        <div id="logo">
            <img src="{{ url('theme://images/++=.png') }}"/>
            <p>Plus Plus Égal 2019</p>
        </div>
        <div id="image">
            {% for img in nav.media.images %}
                {{ img }}
            {% endfor %}
            <p>{{ nav.header.credit }}</p>
        </div>
    </section>
    <section class="right">
        <div id="mail-address">
            <p><span>hello</span><span>plusplusegal</span></p>
        </div>
        <div id="buttons">
            <a href="#"><</a>
            <a href="#">FR</a>
            <a href="#">EN</a>
        </div>
        {% block main %}
        <main>
            {{ page.content }}
        </main>
        {% endblock %}
        <div class="menu-bar">
            <a href="projects.html">Projets</a>
            <a href="about.html">À propos</a>
            <a href="links.html">Liens</a>
            <a href="#">Contact</a>
        </div>
    </section>
</div>
{% endblock %}

{% block javascripts %}
{% do assets.addJs('theme://js/script.js') %}
{% endblock %}
